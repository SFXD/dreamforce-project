    <assignments>
        <description>IF the T&amp;C aren&apos;t accepted, kick the user out.</description>
        <name>KICK_User</name>
        <label>KICK_User</label>
        <locationX>202</locationX>
        <locationY>108</locationY>
        <assignmentItems>
            <assignToReference>LoginFlow_ForceLogout</assignToReference>
            <operator>Assign</operator>
